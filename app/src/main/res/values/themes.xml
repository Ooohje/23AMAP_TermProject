<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.TermProject" parent="Theme.AppCompat.Light">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/Primary</item>
        <item name="colorPrimaryVariant">@color/PrimaryVariant</item>
        <item name="colorOnPrimary">@color/OnPrimary</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#FF03DAC5</item>
        <item name="colorSecondaryVariant">#FF018786</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">#0093CE</item>
        <!-- Customize your theme here. -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.MyDialog" parent="Theme.AppCompat.Dialog" >
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowBackground">#99000000</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="HomeFilterAnimation" parent="Base.Theme.TermProject">
        <item name="android:windowAnimationStyle">@style/HomeFilter</item>
    </style>

    <style name="HomeFilter" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/homefilter_open</item>
        <item name="android:activityOpenExitAnimation">@anim/homefilter_hold</item>
        <item name="android:activityCloseEnterAnimation">@anim/homefilter_hold</item>
        <item name="android:activityCloseExitAnimation">@anim/homefilter_close</item>
    </style>
</resources>