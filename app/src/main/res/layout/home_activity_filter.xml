<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Home.HomeFilterActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/homeFilterAppBar"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:text="필터"
            android:textColor="@color/black"
            android:textSize="28sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageButton
            android:id="@+id/HomeFilter_closeBtn"
            android:layout_width="46dp"
            android:layout_height="46dp"
            android:layout_marginEnd="20dp"
            android:background="@color/transparent"
            android:scaleType="centerCrop"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/round_close_24" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorDivision"
        app:layout_constraintBottom_toBottomOf="@id/homeFilterAppBar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:padding="10dp"
        app:layout_constraintBottom_toTopOf="@+id/HomeFilterBottom"
        app:layout_constraintTop_toBottomOf="@+id/homeFilterAppBar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <!-- 학술 -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="학술 분과"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginStart="10dp"
                android:layout_marginBottom="5dp"/>

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="4"
                android:layout_marginBottom="20dp"
                android:useDefaultMargins="true">

                <ToggleButton
                    android:id="@+id/HomeFilter_academic_all"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_columnWeight="1"
                    android:textOn="모두"
                    android:textOff="모두"
                    android:textSize="16sp"
                    android:background="@drawable/custom_togglebtn"/>
                <ToggleButton
                    android:id="@+id/HomeFilter_academic_it"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_columnWeight="1"
                    android:textOn="IT"
                    android:textOff="IT"
                    android:textSize="16sp"
                    android:background="@drawable/custom_togglebtn"/>
                <ToggleButton
                    android:id="@+id/HomeFilter_academic_humanity"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_columnWeight="1"
                    android:textOn="인문"
                    android:textOff="인문"
                    android:textSize="16sp"
                    android:background="@drawable/custom_togglebtn"/>
                <ToggleButton
                    android:id="@+id/HomeFilter_academic_nature"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_columnWeight="1"
                    android:textOn="자연"
                    android:textOff="자연"
                    android:textSize="16sp"
                    android:background="@drawable/custom_togglebtn"/>
                <ToggleButton
                    android:id="@+id/HomeFilter_academic_else"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_columnWeight="1"
                    android:layout_columnSpan="2"
                    android:textOn="진로\ /\ 발명\ /\ 창업"
                    android:textOff="진로\ /\ 발명\ /\ 창업"
                    android:textSize="16sp"
                    android:background="@drawable/custom_togglebtn"/>
            </GridLayout>

            <!-- 사회 -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="사회 분과"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginStart="10dp"
                android:layout_marginBottom="5dp"/>
            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="4"
                android:layout_marginBottom="20dp"
                android:useDefaultMargins="true">

                <ToggleButton
                    android:id="@+id/HomeFilter_society_all"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_columnWeight="1"
                    android:textOn="모두"
                    android:textOff="모두"
                    android:textSize="16sp"
                    android:background="@drawable/custom_togglebtn"/>
                <ToggleButton
                    android:id="@+id/HomeFilter_society_volunteer"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_columnWeight="1"
                    android:textOn="봉사"
                    android:textOff="봉사"
                    android:textSize="16sp"
                    android:background="@drawable/custom_togglebtn"/>
                <View
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_columnSpan="2"
                    android:layout_columnWeight="2" />
            </GridLayout>

            <!-- 문예 -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="문예 분과"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginStart="10dp"
                android:layout_marginBottom="5dp"/>
            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="4"
                android:layout_marginBottom="20dp"
                android:useDefaultMargins="true">

                <ToggleButton
                    android:id="@+id/HomeFilter_literary_all"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_columnWeight="1"
                    android:textOn="모두"
                    android:textOff="모두"
                    android:textSize="16sp"
                    android:background="@drawable/custom_togglebtn"/>
                <ToggleButton
                    android:id="@+id/HomeFilter_literary_band"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_columnWeight="1"
                    android:textOn="밴드"
                    android:textOff="밴드"
                    android:textSize="16sp"
                    android:background="@drawable/custom_togglebtn"/>
                <ToggleButton
                    android:id="@+id/HomeFilter_literary_inst"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_columnWeight="1"
                    android:textOn="악기"
                    android:textOff="악기"
                    android:textSize="16sp"
                    android:background="@drawable/custom_togglebtn"/>
                <ToggleButton
                    android:id="@+id/HomeFilter_literary_sing"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_columnWeight="1"
                    android:textOn="노래"
                    android:textOff="노래"
                    android:textSize="16sp"
                    android:background="@drawable/custom_togglebtn"/>
                <ToggleButton
                    android:id="@+id/HomeFilter_literary_play"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_columnWeight="1"
                    android:layout_columnSpan="1"
                    android:textOn="연극"
                    android:textOff="연극"
                    android:textSize="16sp"
                    android:background="@drawable/custom_togglebtn"/>
                <ToggleButton
                    android:id="@+id/HomeFilter_literary_art"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_columnWeight="1"
                    android:layout_columnSpan="1"
                    android:textOn="미술"
                    android:textOff="미술"
                    android:textSize="16sp"
                    android:background="@drawable/custom_togglebtn"/>
                <ToggleButton
                    android:id="@+id/HomeFilter_literary_cook"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_columnWeight="1"
                    android:layout_columnSpan="1"
                    android:textOn="요리"
                    android:textOff="요리"
                    android:textSize="16sp"
                    android:background="@drawable/custom_togglebtn"/>
                <ToggleButton
                    android:id="@+id/HomeFilter_literary_dance"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_columnWeight="1"
                    android:layout_columnSpan="1"
                    android:textOn="댄스"
                    android:textOff="댄스"
                    android:textSize="16sp"
                    android:background="@drawable/custom_togglebtn"/>
                <ToggleButton
                    android:id="@+id/HomeFilter_literary_picture"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_columnWeight="1"
                    android:layout_columnSpan="1"
                    android:textOn="사진/영상"
                    android:textOff="사진/영상"
                    android:textSize="16sp"
                    android:background="@drawable/custom_togglebtn"/>
            </GridLayout>

            <!-- 체육 -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="체육 분과"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginStart="10dp"
                android:layout_marginBottom="5dp"/>
            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="4"
                android:layout_marginBottom="20dp"
                android:useDefaultMargins="true">

                <ToggleButton
                    android:id="@+id/HomeFilter_sport_all"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_columnWeight="1"
                    android:textOn="모두"
                    android:textOff="모두"
                    android:textSize="16sp"
                    android:background="@drawable/custom_togglebtn"/>
                <ToggleButton
                    android:id="@+id/HomeFilter_sport_ball"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_columnWeight="1"
                    android:textOn="구기"
                    android:textOff="구기"
                    android:textSize="16sp"
                    android:background="@drawable/custom_togglebtn"/>
                <ToggleButton
                    android:id="@+id/HomeFilter_sport_racket"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_columnWeight="1"
                    android:textOn="라켓"
                    android:textOff="라켓"
                    android:textSize="16sp"
                    android:background="@drawable/custom_togglebtn"/>
                <ToggleButton
                    android:id="@+id/HomeFilter_sport_martialArt"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_columnWeight="1"
                    android:textOn="무술"
                    android:textOff="무술"
                    android:textSize="16sp"
                    android:background="@drawable/custom_togglebtn"/>
                <ToggleButton
                    android:id="@+id/HomeFilter_sport_extream"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_columnWeight="1"
                    android:layout_columnSpan="2"
                    android:textOn="익스트림 스포츠"
                    android:textOff="익스트림 스포츠"
                    android:textSize="16sp"
                    android:background="@drawable/custom_togglebtn"/>
                <ToggleButton
                    android:id="@+id/HomeFilter_sport_bow"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_columnWeight="1"
                    android:layout_columnSpan="1"
                    android:textOn="양궁"
                    android:textOff="양궁"
                    android:textSize="16sp"
                    android:background="@drawable/custom_togglebtn"/>
                <ToggleButton
                    android:id="@+id/HomeFilter_sport_game"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_columnWeight="1"
                    android:layout_columnSpan="1"
                    android:textOn="게임"
                    android:textOff="게임"
                    android:textSize="16sp"
                    android:background="@drawable/custom_togglebtn"/>
            </GridLayout>

            <!-- 종교 -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="종교 분과"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginStart="10dp"
                android:layout_marginBottom="5dp"/>
            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="4"
                android:layout_marginBottom="20dp"
                android:useDefaultMargins="true">

                <ToggleButton
                    android:id="@+id/HomeFilter_religion_all"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_columnWeight="1"
                    android:textOn="모두"
                    android:textOff="모두"
                    android:textSize="16sp"
                    android:background="@drawable/custom_togglebtn"/>
                <ToggleButton
                    android:id="@+id/HomeFilter_religion_cristian"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_columnWeight="1"
                    android:textOn="기독교"
                    android:textOff="기독교"
                    android:textSize="16sp"
                    android:background="@drawable/custom_togglebtn"/>
                <ToggleButton
                    android:id="@+id/HomeFilter_religion_buddhism"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_columnWeight="1"
                    android:textOn="불교"
                    android:textOff="불교"
                    android:textSize="16sp"
                    android:background="@drawable/custom_togglebtn"/>
                <ToggleButton
                    android:id="@+id/HomeFilter_religion_catholic"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_columnWeight="1"
                    android:textOn="천주교"
                    android:textOff="천주교"
                    android:textSize="16sp"
                    android:background="@drawable/custom_togglebtn"/>
            </GridLayout>
        </LinearLayout>
    </ScrollView>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorDivision"
        app:layout_constraintTop_toTopOf="@id/HomeFilterBottom" />

    <LinearLayout
        android:id="@+id/HomeFilterBottom"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="10dp"
        app:layout_constraintBottom_toBottomOf="parent">

        <Button
            android:id="@+id/HomeFilter_clearAll"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:text="초기화"
            android:layout_marginEnd="5dp"
            android:textSize="20sp" />

        <Button
            android:id="@+id/HomeFilter_saveFilter"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_weight="2"
            android:backgroundTint="@color/Primary"
            android:text="필터 적용하기"
            android:textColor="@color/white"
            android:textSize="20sp" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>