<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/clubinfo_full_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp">

        <ImageView
            android:id="@+id/club_image"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:adjustViewBounds="true"
            android:src="@drawable/blank_user"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <View
            android:id="@+id/division"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/colorDivision"
            app:layout_constraintTop_toBottomOf="@id/club_image" />

        <TextView
            android:id="@+id/profile_manage"
            android:layout_width="0dp"
            android:layout_height="20dp"
            android:text="대분류 > 소분류"
            android:fontFamily="@font/notosanskr_regular"
            android:includeFontPadding="false"
            android:textColor="@color/gray_767676"
            android:autoSizeTextType="uniform"
            android:autoSizeMaxTextSize="100dp"
            android:autoSizeMinTextSize="10dp"
            android:autoSizeStepGranularity="1dp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/division"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/club_info_name"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:text="동아리명"
            android:fontFamily="@font/notosanskr_regular"
            android:includeFontPadding="false"
            android:textColor="@color/black_191919"
            android:autoSizeTextType="uniform"
            android:autoSizeMaxTextSize="100dp"
            android:autoSizeMinTextSize="30dp"
            android:autoSizeStepGranularity="1dp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/profile_manage"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <Button
            android:id="@+id/club_info_button"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:text="신청하기"
            android:autoSizeTextType="uniform"
            android:backgroundTint="#FF6666"
            android:textColor="@color/white"
            app:layout_constraintTop_toBottomOf="@id/club_info_name"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp" />

        <TextView
            android:id="@+id/club_info_detail"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="자세한 소개"
            android:fontFamily="@font/notosanskr_light"
            android:includeFontPadding="false"
            android:textColor="@color/black_191919"
            android:autoSizeTextType="uniform"
            android:autoSizeMaxTextSize="100dp"
            android:autoSizeMinTextSize="10dp"
            android:autoSizeStepGranularity="1dp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/club_info_button"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>